<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:background="@drawable/main_background"
                tools:context="com.example.cripz.thereporter.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Попълнете следните данни"
            android:id="@+id/registerText"
            android:textSize="23sp"
            android:layout_weight="5"
            android:textColor="#FFFFFF"
            android:gravity="center_horizontal"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/firstNameText"
            android:hint=" Име"
            android:layout_weight="10"
            android:textColor="#f22e52"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_corners_for_edit_text_in_register"
            android:layout_below="@+id/registerText"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/surnameNameText"
            android:hint=" Презиме"
            android:textColor="#f22e52"
            android:layout_weight="10"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_corners_for_edit_text_in_register"
            android:layout_below="@+id/firstNameText"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/familyNameText"
            android:hint=" Фамилия"
            android:layout_weight="10"
            android:layout_marginBottom="5dp"
            android:textColor="#f22e52"
            android:background="@drawable/rounded_corners_for_edit_text_in_register"
            android:layout_below="@+id/surnameNameText"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cityText"
            android:layout_weight="10"
            android:layout_marginBottom="5dp"
            android:textColor="#f22e52"
            android:background="@drawable/rounded_corners_for_edit_text_in_register"
            android:layout_below="@+id/familyNameText"
            android:hint="Населено място"
            android:layout_centerHorizontal="true"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/inputEmailText"
            android:textColor="#f22e52"
            android:hint=" E-mail"
            android:layout_weight="10"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_corners_for_edit_text_in_register"
            android:layout_below="@+id/cityText"
            android:layout_centerHorizontal="true"/>


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:id="@+id/phoneNumberText"
            android:layout_weight="10"
            android:hint=" Телефон"
            android:textColor="#f22e52"
            android:layout_marginBottom="5dp"
            android:background="@drawable/rounded_corners_for_edit_text_in_register"
            android:layout_below="@+id/inputEmailText"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Запомни"
            android:textColor="#FFFFFF"
            android:layout_weight="5"
            android:background="@drawable/rounded_corners_fot_save_button"
            android:id="@+id/registerButtonRegisterActivity"
            android:layout_below="@+id/phoneNumberText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"/>
    </LinearLayout>



</RelativeLayout>
